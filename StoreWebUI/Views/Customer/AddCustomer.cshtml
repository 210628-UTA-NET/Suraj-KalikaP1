@model StoreWebUI.Models.CustomerViewModel
<!DOCTYPE html>
<html>
<head>

</head>
<body>
<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                    <div class="login-space">
                        <div class="login">
                            <form asp-action="LoginCustomer">
                            <div class="group"> <label for="EmailLogin" class="label">Email</label> <input id="emailLogin" type="text" class="input" placeholder="Enter your Email address"> </div>
                            <div class="group"> <label for="PasswordLogin" class="label">Password</label> <input id="passLogin" type="password" class="input" data-type="password" placeholder="Enter your password"> </div>
                            <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                            <div class="group"> <input type="submit" class="button" value="Sign In"> </div>
                            </form>
                            <div class="hr"></div>
                            <div class="foot"> <a href="#">Forgot Password?</a> </div>
                        </div>
                        <div class="sign-up-form">
                            <form asp-action="Create">

                            <div class="group"> <label asp-for="Email" class="label">Email Address</label> 
                            <input asp-for="Email" id="email" type="text" class="input" placeholder="Enter Email Address"> 
                            <span asp-validation-for="Email" class="text-danger"></span></div>

                            <div class="group"> <label asp-for="Password" class="label">Password</label> 
                            <input asp-for="Password" id="pass" type="password" class="input" data-type="password" placeholder="Create your password"> 
                            <span asp-validation-for="Password" class="text-danger"></span></div>

                            <div class="group"> <label asp-for="Name" class="label">Customer Name</label> 
                            <input asp-for="Name" id="name" type="text" class="input" placeholder="Enter your Name"> 
                            <span asp-validation-for="Name" class="text-danger"></span></div>

                            <div class="group"> <label asp-for="Address" class="label">Customer Address</label> 
                            <input asp-for="Address" id="address" type="text" class="input" placeholder="Enter your Address"> 
                            <span asp-validation-for="Address" class="text-danger"></span></div>

                            <div class="group"> <label asp-for="PhoneNumber" class="label">Customer Phone Number</label> 
                            <input asp-for="PhoneNumber" pattern="[0-9]{10}"id="phoneNum" type="text" class="input" placeholder="Enter your Phone Number"> 
                             <span asp-validation-for="PhoneNumber" class="text-danger"></span></div>

                             <div class="group"><button type="submit" class="button" value="Sign Up"> Sign Up</button></div>
                            </form>
                            <div class="hr"></div>
                            <div class="foot"> <label for="tab-1">Already Member?</label> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
